server 192.168.255.0 255.255.255.0
verb 3
#tls-auth /etc/openvpn/pki/ta.key
tls-auth {{openvpn_keydir}}/ta.key
key-direction 0
keepalive 10 60
persist-key
persist-tun

proto udp
port 1194
dev tun0
status /tmp/openvpn-status.log

user nobody
group nogroup
# push dhcp-option DNS 8.8.8.8
# push dhcp-option DNS 8.8.4.4
# route 192.168.254.0 255.255.255.0
# route 10.20.0.0 255.255.0.0
# route 192.168.178.0 255.255.255.0

# client-config-dir /etc/openvpn/staticclients

ca {{openvpn_keydir}}/ca.crt
cert {{openvpn_keydir}}/server.crt
key {{openvpn_keydir}}/server.key  # This file should be kept secret
dh {{openvpn_keydir}}/dh{{openvpn_key_size}}.pem
